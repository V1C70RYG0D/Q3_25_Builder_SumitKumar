# üîß ENVIRONMENT CONFIGURATION GUIDE

# Copy this file to .env and fill in your actual values
# ‚ö†Ô∏è NEVER commit the actual .env file to version control

# ================================
# SOLANA NETWORK CONFIGURATION
# ================================

# Primary network to use (devnet/testnet/mainnet-beta)
SOLANA_NETWORK=devnet

# Primary RPC URL (can be same as network-specific URL below)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Network commitment level
SOLANA_COMMITMENT=confirmed

# ================================
# NETWORK-SPECIFIC RPC URLS
# ================================
# Configure the networks you plan to use:

# For development and testing
DEVNET_RPC_URL=https://api.devnet.solana.com

# For staging/pre-production
TESTNET_RPC_URL=https://api.testnet.solana.com

# For production deployment
MAINNET_RPC_URL=https://api.mainnet-beta.solana.com

# Alternative RPC providers (uncomment if needed):
# DEVNET_RPC_URL=https://devnet.helius-rpc.com/?api-key=YOUR_API_KEY
# MAINNET_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY

# ================================
# PROGRAM IDS
# ================================
# Set these after deploying your programs

TURBIN3_VAULT_PROGRAM_ID=
WBA_PREREQ_PROGRAM_ID=

# ================================
# WALLET CONFIGURATION
# ================================
# Paths to your wallet files (relative to project root)

WALLET_PATH=./turbin3-wallet.json
EXAMPLE_WALLET_PATH=./example-wallet.json

# ================================
# NFT AND METADATA CONFIGURATION
# ================================

# Irys upload endpoint for decentralized storage
IRYS_UPLOAD_URL=https://devnet.irys.xyz

# Default NFT settings
DEFAULT_NFT_SYMBOL=TURBIN3
DEFAULT_NFT_CREATOR_SHARE=100

# Specific NFT metadata (for nft_metadata.ts)
NFT_IMAGE_URI=
NFT_NAME=
NFT_SYMBOL=
NFT_DESCRIPTION=
NFT_ATTRIBUTES=[]
NFT_FILE_TYPE=image/webp

# ================================
# VAULT CONFIGURATION
# ================================
# These will be generated when you run vault_init

VAULT_STATE_ADDRESS=
VAULT_AUTH_ADDRESS=
VAULT_ADDRESS=

# ================================
# BATCH OPERATIONS
# ================================

# For batch minting operations
MINT_ADDRESS=
RECIPIENT_ADDRESSES=
AMOUNT_PER_RECIPIENT=69

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Logging and debugging
LOG_LEVEL=info
DEBUG_MODE=false

# Testing configuration
TEST_AIRDROP_AMOUNT=10
TEST_TIMEOUT_MS=30000

# ================================
# SECURITY SETTINGS
# ================================

# Additional security measures
REQUIRE_CONFIRMATION=true
MAX_RETRY_ATTEMPTS=3

# GitHub username for enrollment
GITHUB_USERNAME=

# Default recipient for transfers
RECIPIENT_ADDRESS=

